<div class="ui text container">
  <h1>Add Post</h1>
  <form class="ui form" method="POST" action="/addpost">
    <div class="field">
      <label>Username</label>
      <input type="text" name="username" placeholder="Username">
    </div>
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" placeholder="Post title">
