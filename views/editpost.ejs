<% include partials/header %>

  <div class="ui text container context">
    <div class="ui header">
      <h1>Edit</h1>
    </div>
    <form class="ui form" action="/post/<%= post._id %>/edit" method="POST">
      <div class="field">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= post.title %>" />
      </div>
      <div class="field">
        <label for="image_url">Image</label>
        <input type="text" name="image_url" value="<%= post.image_url %>">
      </div>
      <div class="field">
        <label for="post_content">Content</label>
        <textarea type="text" name="post_content">
          <%= post.post_content %>
        </textarea>
      </div>
      <button class="ui button" type="submit">Add Post</button>
    </form>
  </div>

<% include partials/footer %>